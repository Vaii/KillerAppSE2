@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model KillerAppSE2.ViewModel.RegisterViewModelOuder

@using (Html.BeginForm("RegisterOuder", "Register", FormMethod.Post))
{
    <div class="form-container">
        <form method="post">
            <h2 class="text-center">Oudere Registreren.</h2>
            <div class="form-group">
                <input type="text" name="initialen" placeholder="Initialen" class="form-control"/>
            </div>
            <div class="form-group">
                <input type="text" name="Achternaam" placeholder="Achternaam" class="form-control"/>
            </div>
            <div class="form-group">
                <input type="text" name="loginPin" placeholder="4 Cijferige login code" class="form-control"/>
            </div>
            <div class="form-group">
                <input type="text" name="email" placeholder="Email" class="form-control"/>
            </div>
            <div class="form-group">
                <input type="text" name="TelNr" placeholder="Telefoon Nummer" class="form-control"/>
            </div>
            <div class="form-group">
                <input type="text" name="MobNr" placeholder="Mobiel Nr" class="form-control"/>
            </div>
            <div class="form-group">
                <input type="text" name="ThuisAdres" placeholder="Thuis Adres" class="form-control"/>
            </div>
            <div class="form-group">
                <input type="text" name="Leeftijd" placeholder="Leeftijd" class="form-control"/>
            </div>
            <div class="form-group"></div>
            <div class="form-group">
                <button class="btn btn-primary btn-block" type="submit">Registreer</button>
            </div>
        </form>
    </div>
}